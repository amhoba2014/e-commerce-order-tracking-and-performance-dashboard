{
	"name": "backend",
	"image": "ecommerce_order_tracking_dev-backend:latest",
  "workspaceMount": "source=${localWorkspaceFolder}/assets,target=/assets,type=bind,consistency=cached",
  "workspaceFolder": "/assets",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.autopep8"],
      "settings": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "ms-python.autopep8",
        "autopep8.args": [
          "--indent-size=2"
        ]
      }
    }
  }
}
